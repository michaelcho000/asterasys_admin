{
  "version": "1.0.0",
  "lastUpdated": "2025-09-03",
  "asterasysProducts": ["쿨페이즈", "리프테라", "쿨소닉"],
  
  "csvMappings": {
    "blog_rank": {
      "file": "asterasys_total_data - blog_rank.csv",
      "encoding": "utf-8-bom",
      "columns": {
        "keyword": "키워드",
        "blogType": "블로그유형",
        "totalCount": "총 개수",
        "commentCount": "댓글 총 개수",
        "replyCount": "대댓글 총 개수",
        "publishCount": "발행량합",
        "deviceType": "기기구분",
        "publishRank": "발행량 순위"
      },
      "dataExtraction": {
        "publishTotal": {
          "column": "발행량합",
          "type": "integer",
          "aggregation": "sum"
        },
        "commentTotal": {
          "formula": "댓글 총 개수 + 대댓글 총 개수",
          "type": "integer",
          "aggregation": "sum"
        }
      }
    },
    
    "cafe_rank": {
      "file": "asterasys_total_data - cafe_rank.csv",
      "encoding": "utf-8-bom",
      "columns": {
        "keyword": "키워드",
        "group": "그룹",
        "totalPublish": "총 발행량",
        "totalComments": "총 댓글수",
        "totalReplies": "총 대댓글수",
        "rank": "순위"
      },
      "dataExtraction": {
        "publishTotal": {
          "column": "총 발행량",
          "type": "integer",
          "aggregation": "sum"
        },
        "commentTotal": {
          "formula": "parseInt(총 댓글수.replace(/,/g, '')) + parseInt(총 대댓글수.replace(/,/g, ''))",
          "type": "integer",
          "aggregation": "sum"
        }
      }
    },
    
    "news_rank": {
      "file": "asterasys_total_data - news_rank.csv",
      "encoding": "utf-8-bom",
      "columns": {
        "keyword": "키워드",
        "group": "그룹",
        "totalPublish": "총 발행량",
        "rank": "순위"
      },
      "dataExtraction": {
        "publishTotal": {
          "column": "총 발행량",
          "type": "integer",
          "aggregation": "sum"
        },
        "commentTotal": {
          "value": 0,
          "note": "News doesn't have comments"
        }
      }
    },
    
    "traffic": {
      "file": "asterasys_total_data - traffic.csv",
      "encoding": "utf-8-bom",
      "columns": {
        "keyword": "키워드",
        "group": "그룹",
        "monthlySearch": "월감 검색량",
        "searchRank": "검색량 순위"
      },
      "dataExtraction": {
        "searchVolume": {
          "column": "월감 검색량",
          "type": "integer",
          "aggregation": "sum"
        }
      }
    },
    
    "sale": {
      "file": "asterasys_total_data - sale.csv",
      "encoding": "utf-8-bom",
      "columns": {
        "keyword": "키워드",
        "group": "그룹",
        "salesVolume": "판매량",
        "salesRank": "판매량 순위"
      },
      "dataExtraction": {
        "salesTotal": {
          "column": "판매량",
          "type": "integer",
          "aggregation": "sum"
        }
      }
    },
    
    "youtube_rank": {
      "file": "asterasys_total_data - youtube_rank.csv",
      "encoding": "utf-8-bom",
      "columns": {
        "keyword": "키워드",
        "group": "그룹",
        "totalPublish": "총 발행량",
        "rank": "순위"
      },
      "dataExtraction": {
        "publishTotal": {
          "column": "총 발행량",
          "type": "integer",
          "aggregation": "sum"
        }
      }
    },
    
    "naver_datalab": {
      "file": "asterasys_total_data - naver datalab.csv",
      "encoding": "utf-8-bom",
      "columns": {
        "date": "날짜",
        "liftera": "리프테라",
        "coolphase": "쿨페이즈",
        "coolsonic": "쿨소닉"
      },
      "dataExtraction": {
        "trendData": {
          "type": "timeseries",
          "dateColumn": "날짜",
          "valueColumns": ["리프테라", "쿨페이즈", "쿨소닉"]
        }
      }
    },
    
    "facebook_targeting": {
      "file": "asterasys_total_data - facebook_targeting.csv",
      "encoding": "utf-8-bom",
      "columns": {
        "name": "이름",
        "category": "유형",
        "audience_size_min": "잠재 도달 규모_최소",
        "audience_size_max": "잠재 도달 규모_최대",
        "path": "경로",
        "description": "설명",
        "topic": "토픽"
      }
    },
    
    "news_analysis": {
      "file": "asterasys_total_data - news analysis.csv",
      "encoding": "utf-8-bom",
      "columns": {
        "product": "제품명",
        "date": "날짜",
        "title": "제목",
        "media": "매체",
        "url": "URL"
      }
    }
  },
  
  "dashboardComponents": {
    "description": "Main dashboard components and their data requirements",
    
    "PaymentRecordChart": {
      "component": "PaymentRecordChart",
      "title": "시장 종합 마케팅 분석",
      "dataSources": ["blog_rank", "cafe_rank"],
      "calculation": {
        "description": "RF/HIFU 제품별 발행량과 댓글수 분석",
        "dataMapping": {
          "publishData": "blog_rank.발행량합",
          "commentData": "cafe_rank.총 댓글수",
          "categories": "cafe_rank.그룹 (고주파/초음파)"
        },
        "marketShare": "(Asterasys 발행량+댓글 / 전체 발행량+댓글) * 100",
        "ranking": "발행량 + 댓글수 기준 정렬",
        "products": {
          "RF": ["써마지", "인모드", "쿨페이즈", "덴서티", "올리지오", "튠페이스", "세르프", "텐써마", "볼뉴머"],
          "HIFU": ["울쎄라", "슈링크", "쿨소닉", "리프테라", "리니어지", "브이로", "텐쎄라", "튠라이너", "리니어펌"]
        }
      }
    },
    
    "LeadsOverviewChart": {
      "component": "LeadsOverviewChart",
      "title": "채널별 마케팅 성과 분포",
      "dataSources": ["cafe_rank", "youtube_rank", "news_rank", "blog_rank"],
      "calculation": {
        "description": "4개 채널별 Asterasys 제품 발행량 분포",
        "channels": [
          {
            "name": "카페",
            "source": "cafe_rank.총 발행량",
            "filter": "Asterasys products only"
          },
          {
            "name": "유튜브",
            "source": "youtube_rank.총 발행량",
            "filter": "Asterasys products only"
          },
          {
            "name": "뉴스",
            "source": "news_rank.총 발행량",
            "filter": "Asterasys products only"
          },
          {
            "name": "블로그",
            "source": "blog_rank.발행량합",
            "filter": "Asterasys products only"
          }
        ],
        "percentage": "(채널별 Asterasys 합계 / 전체 채널 Asterasys 합계) * 100"
      }
    },
    
    "LatestLeads": {
      "component": "LatestLeads",
      "title": "경쟁사 순위 현황",
      "dataSources": ["cafe_rank", "youtube_rank", "blog_rank", "news_rank"],
      "calculation": {
        "description": "전체 제품 종합 순위 계산",
        "totalScore": "cafe_rank.총 발행량 + youtube_rank.총 발행량 + blog_rank.발행량합 + news_rank.총 발행량",
        "ranking": "종합 점수 기준 정렬",
        "statusLevels": {
          "시장지배": "totalScore >= 2000",
          "경쟁우위": "totalScore >= 1200",
          "안정적": "totalScore >= 800",
          "성장세": "totalScore >= 400",
          "성장필요": "totalScore < 400"
        },
        "asterasysHighlight": "쿨페이즈, 리프테라, 쿨소닉 특별 표시"
      }
    },
    
    "TasksOverviewChart": {
      "component": "TasksOverviewChart",
      "title": "네이버 검색 트렌드",
      "dataSources": ["naver_datalab"],
      "calculation": {
        "description": "네이버 데이터랩 검색 트렌드 분석",
        "products": ["리프테라", "쿨페이즈", "쿨소닉"],
        "aggregation": "주간 평균값 계산",
        "chartType": "area chart",
        "period": "최근 8주"
      }
    },
    
    "FacebookTargetingWidget": {
      "component": "FacebookTargetingWidget",
      "title": "Facebook 광고 성과",
      "dataSources": ["facebook_targeting"],
      "calculation": {
        "description": "Facebook 광고 캠페인 성과 분석",
        "metrics": {
          "reach": "도달수",
          "impressions": "노출",
          "clicks": "클릭수",
          "result": "결과"
        },
        "ctr": "(클릭수 / 노출) * 100",
        "reachRate": "(도달수 / 노출) * 100"
      }
    },
    
    "KPIStatistics": {
      "component": "AsteraysKPIStatistics",
      "cards": [
        {
          "id": 1,
          "title": "블로그 발행량",
          "dataSource": "blog_rank",
          "calculation": {
            "asterasysValue": "SUM(발행량합) WHERE 키워드 IN ['쿨페이즈', '리프테라', '쿨소닉']",
            "marketTotal": "SUM(발행량합) WHERE ALL",
            "percentage": "(asterasysValue / marketTotal) * 100",
            "display": {
              "mainNumber": "asterasysValue",
              "progressBar": "percentage",
              "context": "전체 블로그 대비 {percentage}% ({asterasysValue}/{marketTotal}건)"
            }
          }
        },
        {
          "id": 2,
          "title": "카페 발행량",
          "dataSource": "cafe_rank",
          "calculation": {
            "asterasysValue": "SUM(총 발행량) WHERE 키워드 IN ['쿨페이즈', '리프테라', '쿨소닉']",
            "marketTotal": "SUM(총 발행량) WHERE ALL",
            "percentage": "(asterasysValue / marketTotal) * 100",
            "display": {
              "mainNumber": "asterasysValue",
              "progressBar": "percentage",
              "context": "전체 카페 대비 {percentage}% ({asterasysValue}/{marketTotal}건)"
            }
          }
        },
        {
          "id": 3,
          "title": "뉴스 발행량",
          "dataSource": "news_rank",
          "calculation": {
            "asterasysValue": "SUM(총 발행량) WHERE 키워드 IN ['쿨페이즈', '리프테라', '쿨소닉']",
            "marketTotal": "SUM(총 발행량) WHERE ALL",
            "percentage": "(asterasysValue / marketTotal) * 100",
            "display": {
              "mainNumber": "asterasysValue",
              "progressBar": "percentage",
              "context": "전체 뉴스 대비 {percentage}% ({asterasysValue}/{marketTotal}건)"
            }
          }
        },
        {
          "id": 4,
          "title": "검색량",
          "dataSource": "traffic",
          "calculation": {
            "asterasysValue": "SUM(월감 검색량) WHERE 키워드 IN ['쿨페이즈', '리프테라', '쿨소닉']",
            "marketTotal": "SUM(월감 검색량) WHERE ALL",
            "percentage": "(asterasysValue / marketTotal) * 100",
            "display": {
              "mainNumber": "asterasysValue",
              "progressBar": "percentage",
              "context": "전체 검색 대비 {percentage}% ({asterasysValue}/{marketTotal}회)"
            }
          }
        },
        {
          "id": 5,
          "title": "판매량",
          "dataSource": "sale",
          "calculation": {
            "asterasysValue": "SUM(판매량) WHERE 키워드 IN ['쿨페이즈', '리프테라', '쿨소닉']",
            "marketTotal": "SUM(판매량) WHERE ALL",
            "percentage": "(asterasysValue / marketTotal) * 100",
            "display": {
              "mainNumber": "asterasysValue",
              "progressBar": "percentage",
              "context": "전체 시장 대비 {percentage}% ({asterasysValue}/{marketTotal}대)"
            }
          }
        }
      ]
    },
    
    "PaymentRecordChart": {
      "component": "PaymentRecordChart",
      "dataSources": ["blog_rank", "cafe_rank"],
      "calculation": {
        "productGroups": {
          "RF": ["써마지", "인모드", "쿨페이즈", "덴서티", "올리지오", "튠페이스", "세르프", "텐써마", "볼뉴머"],
          "HIFU": ["울쎄라", "슈링크", "쿨소닉", "리프테라", "리니어지", "브이로", "텐쎄라", "튠라이너", "리니어펌"]
        },
        "metrics": {
          "publishData": "blog_rank.발행량합",
          "commentData": "cafe_rank.총 댓글수 + cafe_rank.총 대댓글수",
          "searchTrend": "publishData + commentData"
        },
        "marketShare": {
          "formula": "(SUM(asterasys_products) / SUM(all_products)) * 100",
          "asterasysProducts": ["쿨페이즈", "리프테라", "쿨소닉"]
        }
      }
    },
    
    "LeadsOverviewChart": {
      "component": "LeadsOverviewChart",
      "dataSources": ["cafe_rank", "youtube_rank", "news_rank", "blog_rank"],
      "calculation": {
        "channels": [
          {
            "name": "카페",
            "source": "cafe_rank.총 발행량",
            "color": "#3b82f6"
          },
          {
            "name": "유튜브",
            "source": "youtube_rank.총 발행량",
            "color": "#10b981"
          },
          {
            "name": "뉴스",
            "source": "news_rank.총 발행량",
            "color": "#f59e0b"
          },
          {
            "name": "블로그",
            "source": "blog_rank.발행량합",
            "color": "#ef4444"
          }
        ],
        "percentage": "(channel_total / sum_all_channels) * 100"
      }
    },
    
    "AsteraysProductPortfolio": {
      "component": "AsteraysProductPortfolio",
      "dataSources": ["naver_datalab", "blog_rank", "cafe_rank", "traffic", "sale"],
      "products": [
        {
          "name": "쿨페이즈",
          "category": "RF",
          "metrics": {
            "sales": "sale.판매량",
            "publish": "blog_rank.발행량합",
            "comments": "blog_rank.댓글 총 개수 + blog_rank.대댓글 총 개수",
            "search": "traffic.월감 검색량",
            "trend": "naver_datalab.쿨페이즈"
          }
        },
        {
          "name": "리프테라",
          "category": "HIFU",
          "metrics": {
            "sales": "sale.판매량",
            "publish": "blog_rank.발행량합",
            "comments": "blog_rank.댓글 총 개수 + blog_rank.대댓글 총 개수",
            "search": "traffic.월감 검색량",
            "trend": "naver_datalab.리프테라"
          }
        },
        {
          "name": "쿨소닉",
          "category": "HIFU",
          "metrics": {
            "sales": "sale.판매량",
            "publish": "blog_rank.발행량합",
            "comments": "blog_rank.댓글 총 개수 + blog_rank.대댓글 총 개수",
            "search": "traffic.월감 검색량",
            "trend": "naver_datalab.쿨소닉"
          }
        }
      ]
    },
    
    "NewsProductCategoryRadar": {
      "component": "NewsProductCategoryRadar",
      "dataSource": "news_analysis",
      "calculation": {
        "totalArticles": "COUNT(ALL)",
        "asterasysArticles": "COUNT WHERE 제품명 IN ['쿨페이즈', '리프테라', '쿨소닉']",
        "marketShare": "(asterasysArticles / totalArticles) * 100",
        "dailyAverage": "asterasysArticles / 30"
      }
    }
  },
  
  "calculationRules": {
    "commentTotal": {
      "description": "Total comments including replies",
      "formula": "댓글수 + 대댓글수"
    },
    "marketShare": {
      "description": "Asterasys market share percentage",
      "formula": "(asterasys_total / market_total) * 100"
    },
    "channelDistribution": {
      "description": "Channel-wise distribution percentage",
      "formula": "(channel_total / all_channels_total) * 100"
    },
    "productRanking": {
      "description": "Product ranking based on publish + comments",
      "formula": "발행량 + 댓글수 (sorted descending)",
      "note": "Sales data is for reference only, not used in ranking"
    }
  }
}